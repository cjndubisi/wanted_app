fastlane_version "2.141.0"

before_all do
  ensure_git_branch
  ensure_git_status_clean
end

platform :ios do
  # iOS Lanes

  desc "Fetch certificates and provisioning profiles"
  lane :certificates do
    match(app_identifier: "wanted.app.ios", type: "development", readonly: false)
    match(app_identifier: "wanted.app.ios", type: "appstore", readonly: false)
  end

  desc 'Build the iOS application.'
  private_lane :build do
    clear_derived_data
    cocoapods(
      podfile: "ios/Podfile",
      repo_update: true,
      use_bundle_exec: true,
    )
    certificates
    increment_build_number(xcodeproj: './ios/Wanted.xcodeproj')
    gym(
      scheme: 'Wanted',
      workspace: './ios/Wanted.xcworkspace',
      configuration: 'Release',
      export_options: {
        method: "app-store",
        provisioningProfiles: { 
          "wanted.app.ios" => "match AppStore wanted.app.ios",
        }
      }
    )
  end

  desc 'Ship to Testflight.'
  lane :beta do
    build
    commit_version_bump(message: 'Bump build', xcodeproj: 'ios/Wanted.xcodeproj')
    push_to_git_remote
  end
end

platform :android do
  # Android Lanes

  desc 'Build the Android application.'
  private_lane :build do
    gradle(task: 'clean', project_dir: 'android/')
    gradle(task: 'assemble', build_type: 'Release', project_dir: 'android/')
  end

  desc 'Ship to Playstore Beta.'
  lane :beta do
    build
    supply(track: 'beta', track_promote_to: 'beta')
    git_commit(path: ['./android/gradle.properties'], message: 'Bump versionCode')
    push_to_git_remote
  end
end